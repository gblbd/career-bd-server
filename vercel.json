{
    "version": 2,
    "builds": [
        {
            "src": "./index.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "methods": [
                "GET",
                "POST",
                "PUT",
                "PATCH",
                "DELETE"
            ],
            "headers": {
                "Access-Control-Allow-Origin": "https://careersbangladesh.com"
            },
            "dest": "./index.js"
        }
    ],
    "public": true,
    "crons": [
        {
            "path": "/cron",
            "schedule": "0 10 * * *"
        }
    ]
}